<div class="game_status">
  <% if @game %>
    <div class="game_info">
        <div>
            Game Number <%= @game.id %>
        </div>
        <% if @game.status == "active" %>
            Tiles Remaining: <%= @game.tiles_remaining %>
            Turn: <%= @game.current_player.username %>
        <% end %>
    </div>
  <div class="scores">
    <% if @game.status == "active" %>
        <%= render partial: 'shared/scores' %>
    <% else %>
        Waiting for Opponent
    <% end %>
  </div>
    <%= button_to "Forfeit", forfeit_game_path, class: "button logout_button", :confirm => "Are you sure you want to forfeit?" %>
  <% end %>
  <%= button_to "Log Out", session_path(session[:id]), class: "button logout_button", method: :delete, :confirm => "Are you sure you want to log out?" %>
</div>