<div class="signup">
    <h1>Sign Up</h1>
    <%= form_for @player, :html => {:class => 'signup_title'} do |f| %>
        <div>
          <%= f.label :username %>
          <%= f.text_field :username, class: "field" %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password, class: "field" %>
        </div>
        <div>
          <%= f.label :email %>
          <%= f.text_field :email, class: "field" %>
        </div>
        <div>
          <%= f.submit "Sign Up", class: "button" %>
        </div>
    <% end %>
</div>