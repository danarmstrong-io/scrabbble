<div class="games_to_join">
  <h2>Games You Can Join</h2>
    <% Game.pending.each do |game| %>
      <% unless game.playergames.first.player.id == session[:id] %>
        <div class="game_to_join">
          <h2>Game created by: <%= game.playergames.first.player.username %></h2>
          <h4>Created at: <%= game.created_at %></h4>
          <%= button_to "Join Game", games_join_path(:game_id => game.id), class: "button", :method => :post %>
        </div>
      <% end %>
    <% end %>
</div>